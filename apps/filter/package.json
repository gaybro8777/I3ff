{
  "name": "crebp-i3-filter",
  "version": "0.0.0",
  "description": "Simple I3 filter App",
  "main": "index.js",
  "keywords": [
    "icasr",
    "i3"
  ],
  "author": "Matt Carter <m@ttcarter.com>",
  "license": "GPLv2",
  "inputs": [
    {
      "type": "citations",
      "format": "json",
      "filename": "input.json"
    }
  ],
  "worker": {
    "type": "docker",
    "container": "crebp/filter",
    "mount": "/app/work",
    "command": [
      "--input=/app/work/input.json",
      "--output=/app/work/output.json",
      "${settings.fields && '--fields=' + settings.fields}",
      "${settings.globs && '--globs=' + settings.globs}",
      "${settings.globFields && '--glob-fields=' + settings.globFields}"
    ]
  },
  "outputs": [
    {
      "type": "citations",
      "format": "json",
      "filename": "output.json"
    }
  ],
  "settings": {
    "fields": "csv",
    "globs": "csv",
    "globFields": {
      "type": "csv",
      "default": "title"
    }
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "temp": "^0.8.3"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "lodash": "^4.17.11",
    "micromatch": "^3.1.10"
  }
}
